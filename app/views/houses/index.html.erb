<p id="notice"><%= notice %></p>

<%= bar_chart @data_for_bar_chart %>

<%= column_chart(
  @data_for_multiple_culumn_chart,
  title: "Regional average energy production by number of family members",
  xtitle: "Num of Family Menbers",
  ytitle: "Average Energy Production",
  ) %>

<h1>Houses</h1>

<table class="table table-bordered table-striped table-condensed">
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>City</th>
      <th>Num of people</th>
      <th>Has child</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @houses.each do |house| %>
      <tr>
        <td><%= house.firstname %></td>
        <td><%= house.lastname %></td>
        <td><%= house.city %></td>
        <td><%= house.num_of_people %></td>
        <td><%= house.has_child %></td>
        <td><%= link_to 'Show', house %></td>
        <td><%= link_to 'Edit', edit_house_path(house) %></td>
        <td><%= link_to 'Destroy', house, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New House', new_house_path, class: "btn btn-default" %>
